{
  "name": "transbank/transbank-sdk",
  "description": "Transbank SDK",
  "keywords": ["payments", "transbank", "api", "sdk"],
  "require": {
      "php": ">=8.2",
      "ext-curl": "*",
      "ext-json": "*",
      "ext-mbstring": "*",
      "guzzlehttp/guzzle":"^7"
  },
  "require-dev": {
    "phpunit/phpunit": "^11",
    "squizlabs/php_codesniffer": "^3"
  },
  "autoload": {
    "psr-4": {
      "Transbank\\": [
        "src/"
      ]
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": [
        "tests/"
      ]
    }
  },
  "scripts": {
  "test": "phpunit"
  },
  "license": "BSD-3-Clause"
}
